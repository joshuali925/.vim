#!/usr/bin/env bash
source ~/.vim/bin/_install_from_github.sh
detect-env
if [ "$PLATFORM" == 'linux' ] && [ "$ARCHITECTURE" == 'arm64' ]; then
  install-from-url sd https://github.com/joshuali925/.vim/releases/download/binaries/sd-linux-arm64 "$@"
else
  install-from-github sd chmln/sd x86_64-unknown-linux-musl '' x86_64-apple '' '' "$@"
fi
