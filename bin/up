#!/usr/bin/env bash
source ~/.vim/bin/_install_from_github.sh
detect-env
if [ "$PLATFORM" == 'darwin' ]; then
  install-from-url up $(curl -s https://api.github.com/repos/akavel/up/releases/latest | grep "browser_download_url.*up-darwin" | cut -d '"' -f 4) "$@"
else
  if [ "$ARCHITECTURE" != 'x86_64' ]; then
    echo "[installing $0] architecture not supported, exiting.." >&2
    exit 1
  fi
  install-from-url up $(curl -s https://api.github.com/repos/akavel/up/releases/latest | grep "browser_download_url.*up" | cut -d '"' -f 4) "$@"
fi
