#!/usr/bin/env bash
if [ ! -x $HOME/.local/bin/iterm-imgls ]; then
  mkdir -p $HOME/.local/bin
  echo "Installing iterm-imgls from https://iterm2.com/utilities/imgls" >&2
  curl -sL -o $HOME/.local/bin/iterm-imgls https://iterm2.com/utilities/imgls
  chmod +x $HOME/.local/bin/iterm-imgls
fi
$HOME/.local/bin/iterm-imgls "$@"
