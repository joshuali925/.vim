#!/usr/bin/env bash
source ~/.vim/bin/_install_from_github.sh
run-if-exists "$0" "$@"
detect-env

VERSION=2200  # https://www.7-zip.org/download.html
if [ "$PLATFORM" != 'linux' ]; then
  echo "package not found for '${0##*/}' on $PLATFORM $ARCHITECTURE, exiting.." >&2
  exit 1
fi

[ "$ARCHITECTURE" = 'x86_64' ] && ARCHITECTURE=x64
install-archive-from-url "https://www.7-zip.org/a/7z$VERSION-linux-$ARCHITECTURE.tar.xz" 7z '7zzs && mv ~/.local/bin/7zzs ~/.local/bin/7z'
