#!/usr/bin/env bash
if [ ! -x $HOME/.local/bin/iterm-imgcat ]; then
  mkdir -p $HOME/.local/bin
  echo "Installing iterm-imgcat from https://iterm2.com/utilities/imgcat" >&2
  curl -sL -o $HOME/.local/bin/iterm-imgcat https://iterm2.com/utilities/imgcat
  chmod +x $HOME/.local/bin/iterm-imgcat
fi
$HOME/.local/bin/iterm-imgcat "$@"
