#!/usr/bin/env bash
if [ ! -f $HOME/.config/lazygit/config.yml ]; then
  mkdir -p ~/.config/lazygit
  ln -sv ~/.vim/config/lazygit_config.yml ~/.config/lazygit/config.yml
fi

source ~/.vim/bin/install-from-github.sh
TAR_FLAGS=(lazygit)
install-from-github lazygit jesseduffield/lazygit Linux_x86_64 Linux_arm64 $TAR_FLAGS "$@"

