{
  "Template": {
    "prefix": "template",
    "description": "rest.nvim requests, define variables at top: \"BASE: https://httpbin.org/get\"",
    "body": [
      "# ENV {{{",
      "# vim:foldmethod=marker",
      "BASE: ${1:localhost:8888}",
      "# }}}",
      "",
      "$0",
      ""
    ]
  },
  "Content type JSON": {
    "prefix": "content-type",
    "body": ["Content-Type: application/json", "", "{", "\t$0", "}"]
  },
  "GET request": {
    "prefix": "get-request",
    "body": ["GET {{BASE}}/$0"]
  },
  "DELETE request": {
    "prefix": "delete-request",
    "body": ["DELETE {{BASE}}/$0"]
  },
  "PUT request": {
    "prefix": "put-request",
    "body": [
      "PUT {{BASE}}/$1",
      "Content-Type: application/json",
      "",
      "{",
      "\t\"${2:key}\": \"${0:value}\"",
      "}"
    ]
  },
  "POST request": {
    "prefix": "post-request",
    "body": [
      "POST {{BASE}}/$1",
      "Content-Type: application/json",
      "",
      "{",
      "\t\"${2:key}\": \"${0:value}\"",
      "}"
    ]
  }
}
