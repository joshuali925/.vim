{
  "Template": {
    "prefix": "template",
    "description": "rest.nvim request variables",
    "body": ["@base = localhost:${1:8000}", "", "$0", ""]
  },
  "Content type header": {
    "prefix": "content-type",
    "body": "Content-Type: ${1|application/json,application/x-www-form-urlencoded|}"
  },
  "Authorization header": {
    "prefix": "auth-basic",
    "body": "Authorization: Basic ${1:username}:${2:password}"
  },
  "Sigv4 auth": {
    "prefix": "auth-sigv4",
    "body": "Authorization: AWS {{AWS_ACCESS_KEY_ID}} {{AWS_SECRET_ACCESS_KEY}} token:{{AWS_SESSION_TOKEN}} region:{{AWS_REGION}} service:${1:service}"
  },
  "GET request": {
    "prefix": "get-request",
    "body": ["GET {{base}}/$0", "###"]
  },
  "DELETE request": {
    "prefix": "delete-request",
    "body": ["DELETE {{base}}/$0", "###"]
  },
  "PUT request": {
    "prefix": "put-request",
    "body": [
      "PUT {{base}}/$1",
      "Content-Type: application/json",
      "",
      "{",
      "\t\"${2:key}\": \"${0:value}\"",
      "}",
      "###"
    ]
  },
  "POST request": {
    "prefix": "post-request",
    "body": [
      "POST {{base}}/$1",
      "Content-Type: application/json",
      "",
      "{",
      "\t\"${2:key}\": \"${0:value}\"",
      "}",
      "###"
    ]
  }
}
