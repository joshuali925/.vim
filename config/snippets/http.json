{
  "template": {
    "prefix": "template",
    "description": "rest.nvim requests, define variables at top: \"BASE: https://httpbin.org/get\"",
    "body": [
      "# ENV {{{",
      "# vim:foldmethod=marker",
      "BASE: ${0:localhost:8888}",
      "# }}}"
    ]
  },
  "Content type JSON": {
    "prefix": "contentType",
    "body": ["Content-Type: application/json", "", "{", "  $0", "}"]
  },
  "GET request": {
    "prefix": "getrequest",
    "body": ["GET {{BASE}}$0"]
  },
  "DELETE request": {
    "prefix": "deleterequest",
    "body": ["DELETE {{BASE}}$0"]
  },
  "PUT request": {
    "prefix": "putrequest",
    "body": [
      "PUT {{BASE}}$1",
      "Content-Type: application/json",
      "",
      "{",
      "  \"${2:key}\": \"${0:value}\"",
      "}"
    ]
  },
  "POST request": {
    "prefix": "postrequest",
    "body": [
      "POST {{BASE}}$1",
      "Content-Type: application/json",
      "",
      "{",
      "  \"${2:key}\": \"${0:value}\"",
      "}"
    ]
  }
}
